def wrap_line line, width = 78
  words = line.strip.split(/\s+/)
  out = String.new
  line = String.new
  words.each do | word |
    if line.size + word.size > width
      out += line + " \\\n  "
      line = word
    else
      line += word + ' '
    end
    # pe(word: word, words: words)
  end
  out << line
end

